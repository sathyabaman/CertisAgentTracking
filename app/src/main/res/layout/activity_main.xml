<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true">



<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
    android:layout_height="fill_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="#ffd4d4d4">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/et_user_name"
        android:hint="Enter Username"
        android:singleLine="true"
        android:layout_marginTop="136dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/et_password"
        android:hint="Enter Password"
        android:singleLine="true"
        android:layout_marginTop="59dp"
        android:layout_below="@+id/et_user_name"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/login"
        android:id="@+id/btn_login"
        android:background="#F89B22"
        android:layout_marginTop="48dp"
        android:layout_below="@+id/et_password"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/forgot_password"
        android:id="@+id/btn_forgot_password"
        android:layout_marginTop="26dp"
        android:layout_below="@+id/btn_login"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="69dp"
        android:src="@drawable/cats_banner" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:id="@+id/imv_wavenet_logo"
        android:src="@drawable/wavenet"
        android:layout_marginTop="21dp"
        android:layout_below="@+id/btn_forgot_password"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="1.3.15.08.27"
        android:id="@+id/textView16"
        android:textAlignment="center"
        android:singleLine="true"
        android:layout_below="@+id/imv_wavenet_logo"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
</ScrollView>